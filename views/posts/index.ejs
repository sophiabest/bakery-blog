<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.forEach(function(p) { %>
      <tr>
        <td><%= p.title %></td>
        <td><%= p.content %></td>
        <td class="comment-user"><img alt="avatar" src="<%= p.userAvatar %>"><%= p.userName %></td>
        <td><a href="/posts/<%= p._id %>">Comments</a></td>
        <% if (user && user._id.equals(p.user)) { %>
        <form action="/posts/<%= p.id %>?_method=DELETE"
          class="delete-form" method="POST">
          <button type="submit">DELETE <%= p.post %></button>
        </form>
      <% } %>
    </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>